

swiper{
  width: 98%;
  height: 350rpx;
  margin: 5rpx 1%;
}
swiper image{
  width: 100%;
  height: 100%;
}
#videos-list{
  margin: 20rpx 0;
}
.hotTitle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 1 rpx;
  font-size: 25rpx;
  color: gray;
}
.hotTitle .more{
  margin-right: 10rpx;
}
.hot{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  color: gray;
}
.list-item{
  display: flex;
  flex-direction:column;
  overflow: hidden;
  width: 48%;
  font-size: 30rpx;
  margin: 15rpx 1%;
  border:0px;
  border-radius: 10rpx;
  box-shadow: 0 0 15rpx 5rpx #9fafc0;
}
.img{
  width: 95%;
}
.img image{
  width: 100%;
}
.text{
  width: 100%;
  height: 45%;
  overflow: hidden;
  padding: 0 10rpx;
}
