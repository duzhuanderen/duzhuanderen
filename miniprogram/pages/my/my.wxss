/* pages/my/my.wxss */
page{
  height: 100%;
}
/*整体*/
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/*头像*/
#myLogin{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  background-color:burlywood; 
}
/*头像图片*/
#myIcon{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
#nickName{
  color: white;
}
/*头像区域文本*/
#myLogin text{
  margin: 30rpx 0;
}
/*上传*/
.upload{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  box-shadow: 0 1rpx 5rpx gray;

}
.up{
  margin: 0 auto;
  padding-top: 12px;
}
.upload image{
  width: 60px;
  height: 60px;
  display: flex;
}
/*卡片成体*/
#myFavorites{
  width: 100%;
  height: 250rpx;
  box-shadow: 0 1rpx 5rpx gray;

}
#myFavorites .title{
  text-align: center;
}
.container .rowName{
  padding: 10rpx 0;
  box-shadow: 0 1rpx 5rpx gray;
}
.myCard{
  width: 100%;
  height: 75%;
}
.scroll-view_H{
  width: 100%;
  height: 100%;
  display:flex;
  white-space: nowrap;
}
.card{
  position: relative;
  display: inline-block;
  width: 30%;
  height: 70%;
  margin: 5% 5%;
  border-radius: 5%;
  color:white;
}
.card_main{
  width: 100%;
  height: 100%;
  background:gray;
  text-align: center;
}
.card_main image{
  width: 100%;
  height: 100%;
}
 .card_footer{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  font-size:25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  background: gray;
  opacity: 0.8;
}